<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="自动检测"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_transform"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="英文"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <include layout="@layout/public_horizontal_gray_line"/>
            <EditText
                android:id="@+id/trabslation_edittext"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="top|left"
                android:hint="点击输入文本"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:textSize="15sp"
                />

            <LinearLayout
                android:id="@+id/home_forword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@drawable/back_forword_style"
                android:padding="5dp"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mm"

                    />
              <!--  <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_photograph"
                    android:layout_marginRight="55dp"
                    />
                <ImageView
                    android:id="@+id/home_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_sound_anm"
                    android:layout_marginLeft="55dp"
                    />-->
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorGray2"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="译文"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/tranl_full_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_full_screen"
                        android:layout_marginLeft="25dp"
                        />
                    <ImageView
                        android:id="@+id/tranl_replication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_replication"
                        android:layout_marginLeft="25dp"
                        />
                    <ImageView
                        android:id="@+id/tranl_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_sound"
                        android:layout_marginLeft="25dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tranls_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:paddingLeft="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="啊深刻的发生的撒旦法时代发生地方撒的发生地方撒旦发射点发啊速度发啊速度发啊是地方撒"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorGray2"
                android:layout_marginTop="25dp"
                />

            <include layout="@layout/model_news"/>
            <include layout="@layout/public_horizontal_gray_line"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>